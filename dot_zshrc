[[ -r ~/.config/znap/znap.zsh ]] ||
    git clone --depth 1 -- https://github.com/marlonrichert/zsh-snap.git ~/.config/znap
source ~/.config/znap/znap.zsh

# `znap prompt` makes your prompt visible in just 15-40ms!
znap prompt sindresorhus/pure

# `znap source` starts plugins.
znap source agkozak/zsh-z
znap source zsh-users/zsh-completions
znap source zsh-users/zsh-autosuggestions
znap source zsh-users/zsh-syntax-highlighting
znap source zsh-users/zsh-history-substring-search

znap source ohmyzsh/ohmyzsh lib/{completion,key-bindings}

bindkey '^[[A' history-substring-search-up
bindkey '^[[B' history-substring-search-down

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion


if type atuin &> /dev/null; then
    eval "$(atuin init zsh --disable-up-arrow)"
fi

if type eza &> /dev/null; then
    alias ls="eza"
    alias ll="eza -l"
    alias la="eza -l -a"
    alias cat="bat --paging=never --theme=\"Solarized (light)\" --style=\"header,grid,header-filesize\""
fi


